{
  "name": "@rfranr/pareto-rule-core",
  "version": "2.0.0",
  "description": "JavaScript Pareto Rule Analysis Tool - Analyze and visualize JavaScript feature usage following the 80/20 principle",
  "main": "src/analyzer.js",
  "type": "module",
  "scripts": {
    "analyze": "node src/analyzer.js",
    "pareto": "node src/pareto-analyzer.js",
    "charts": "node src/chart-generator.js",
    "pipeline": "./analyze.sh",
    "build": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf charts/ stats/ reports/ *.json *.md *.csv *.png",
    "clean-all": "npm run clean && rm -rf node_modules/ package-lock.json",
    "demo": "npm run analyze -- --repo ./repos/core-js --output demo-stats.json && npm run pareto -- demo-stats.json --output demo-report.md",
    "full-demo": "./analyze.sh full ./repos/core-js",
    "lint": "echo \"Linting not configured yet\"",
    "format": "echo \"Formatting not configured yet\"",
    "dev": "node --watch src/analyzer.js",
    "start": "npm run analyze"
  },
  "exports": {
    "./analyzer": "./src/analyzer.js",
    "./pareto-analyzer": "./src/pareto-analyzer.js",
    "./chart-generator": "./src/chart-generator.js",
    "./adapters/node/file-utils": "./src/adapters/node/file-utils.node.js"
  },
  "bin": {
    "js-pareto": "./src/analyzer.js",
    "pareto-analyze": "./analyze.sh"
  },
