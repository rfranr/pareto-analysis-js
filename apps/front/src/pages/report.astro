---
import fs from "node:fs/promises";
import { marked } from "marked";
import "github-markdown-css/github-markdown-light.css";
import Layout from "../layouts/Layout.astro";

const fileUrl = new URL("../../public/reports/pareto-analysis.md", import.meta.url);
const md = await fs.readFile(fileUrl, "utf-8");
const html = marked.parse(md);
---

<Layout title="JavaScript Pareto Analysis Dashboard">
  <style>
    main.markdown-body {
      background: white;
      padding: 2rem;
      margin: 2rem auto;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      max-width: 900px;
      width: 100%;
      font-family: system-ui, sans-serif;
    }
  </style>

  <main class="markdown-body" set:html={html}></main>
</Layout>
