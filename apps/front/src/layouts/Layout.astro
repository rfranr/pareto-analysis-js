---
export interface Props {
	title?: string;
}

const { title = "Pareto Analysis Dashboard" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<style>
			body {
				font-family: system-ui, sans-serif;
				margin: 0;
				padding: 0;
				background-color: #f8fafc;
				color: #334155;
			}
			
			.container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 2rem;
			}

			h1 {
				color: #1e293b;
				border-bottom: 2px solid #e2e8f0;
				padding-bottom: 0.5rem;
				margin-bottom: 2rem;
			}
		</style>
	</head>
	<body>
		<div class="container">
			<h1>{title}</h1>
			<slot />
		</div>
	</body>
</html>
